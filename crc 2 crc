#include<stdio.h>
#include<stdlib.h>
int i=0,k=0;
void main()
{
	int i,n,m,count=0,n1,a[10000],b[10000],a1[10000],a2[10000],count1;
	printf("Enter the dividend\n");
	scanf("%d",&n);
	while(n!=0)
	{
		a[i]=n%10;
		n=n/10;
		i++;
	}
	for(int j=i-1;j>=0;j--,count++)
	{
	a1[count]=a[j];
	}
	printf("\nEnter the divisor\n");
	scanf("%d",&n1);
	while(n1!=0)
	{
		b[k]=n1%10;
		n1=n1/10;
		k++;
	}
	for(int j=i+1;j<i+k-1;j++)
	{
		b[j]=0;
	}
	printf("After appending zero's\n");
	for(int j=0;j<i+k-1;j++)
	printf("%d",a1[j]);
	
	for(int j=0;j<i+k-1;j++)
	a2[j]=a1[j];
	
	count1=i+k-1;
	for(int j=0;j<i;j++)
	{
		if(a[j]==0)
		{
			m++;
		}
		else
		{
		for(int m=0;m<k;m++)
		{
			a2[k]=a1[j]^b[m];
		}
		}
	}
	printf("\nAfter xor\n");
for(int m=0;m<count1;m++)
printf("%d",a2[m]);
  }
